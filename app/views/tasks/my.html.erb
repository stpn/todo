<% @tasks.each do |task| %>
  <%= form_for :task, :url => { :controller => "tasks", :metho => "put" }, :remote => true do |t|%>
    <%= t.hidden_field :id, :value => task.id %>
	<%= t.check_box :done, :checked => task.done, :class => 'checkable' %>    
	 <%= t.label :content, task.content.html_safe,  :style => "color: #666666; margin-top: 0px;" %>
    <br />          
  <% end %>
<% end %>


<%= link_to "New Task", new_task_path %> 